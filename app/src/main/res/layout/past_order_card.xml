<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PastOrders"
    android:backgroundTint="#CCCCCC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="15dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/pdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/09/2021"
                android:textSize="15dp"
                android:textColor="#104B9A"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Order ID:"
                android:textSize="15dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/porder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="245176"
                android:textSize="15dp"
                android:textColor="#104B9A"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Dealer:"
                android:textSize="15dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/pdealer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chandana Stores"
                android:textSize="15dp"
                android:textColor="#104B9A"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textSize="15dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/ptotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.1750.00"
                android:textSize="15dp"
                android:textColor="#104B9A"/>

        </LinearLayout>



        <Button
            android:id="@+id/pdelete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Delete"/>


    </LinearLayout>

</LinearLayout>